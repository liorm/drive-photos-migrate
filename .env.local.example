# NextAuth.js Configuration
# Generate a secret with: openssl rand -base64 32
AUTH_SECRET=your-secret-key-here

# NextAuth.js URL (use http://localhost:3000 for development)
NEXTAUTH_URL=http://localhost:3000

# Google OAuth Credentials
# Get these from: https://console.cloud.google.com/apis/credentials
AUTH_GOOGLE_ID=your-google-client-id.apps.googleusercontent.com
AUTH_GOOGLE_SECRET=your-google-client-secret

# Required Scopes (automatically configured in auth.ts):
# - openid
# - userinfo.email
# - userinfo.profile
# - drive.readonly (read-only access to Google Drive)
# - photoslibrary.appendonly (upload-only access to Google Photos)
